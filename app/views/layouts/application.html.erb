<!DOCTYPE html>
<html>
  <head>
    <title>SpendingAlert</title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
    <!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->

    <!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
    <script src="https://js.stripe.com/v3/"></script>
  </head>

  <body>
		<!-- Wrapper -->
		<div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar" class="inactive">
        <div class="inner">
          <!-- Menu -->
          <nav id="menu">
            <header class="major">
              <h2>Menu</h2>
            </header>
            <ul>
              <% if current_user %>
                <li><a href="/">Why Choose Us?</a></li>
                <li><a href="/dashboard">Monthly Spending</a></li>
                <li><a href="/budget">Set Spending Limit</a></li>
                <li><a href="/accounts">Add Accounts</a></li>
                <li><a href="/users/edit">Settings</a></li>
                <li><a href="/users/sign_out" data-method="delete">Log Out</a></li>
              <% else %>
                <li><a href="/">Why Choose Us?</a></li>
                <li><a href="/users/sign_up">60 Day Free Trial</a></li>
                <li><a onclick="scrollToBottom()" href="#">Contact Us</a></li>
                <li><a href="/users/sign_up">Sign Up</a></li>
                <li><a href="/users/sign_in">Log In</a></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>

			<div class="inner">
				<!-- Header -->
				<header id="header">
          <% if current_user %>
            <a href="/dashboard" class="logo"><image src="/spendingalertlogo4.png"></image></a>
          <% else %>
            <a href="/" class="logo"><image src="/spendingalertlogo4.png"></image></a>
          <% end %>
				</header>

				<main>
					<%= render "layouts/flash" %>
					<%= yield %>
				</main>
			</div>
		</div>

    <!-- Footer -->
    <footer>
      <section>
        <header class="major">
          <h2>Get in touch</h2>
        </header>
        <ul class="contact">
          <li class="fa-envelope-o">
            <a href="#">info@spendingalert.com</a>
          </li>
          <li class="fa-phone">(603) 642-6161</li>
          <li class="fa-home">SpendingAlert, LLC.<br/>
            PO Box 64<br/>
            East Hampstead, NH 03826</li>
        </ul>
      </section>

      <p class="copyright">
        &copy; SpendingAlert. All rights reserved.
      </p>
    </footer>

  </body>

  <link rel="stylesheet" href="assets/application.css" />
  <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
  <script src="assets/js/main.js"></script>
</html>
